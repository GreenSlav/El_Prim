<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Graphs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Graphs"
    Shell.FlyoutBehavior="Disabled"
    >
    
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill" BackgroundColor="Black">
            <!-- Если содержимое будет выше TitleView, то он добавит дебильные 3 точки справа -->
            <Label
                Padding="10, 0, 10, 0"
                Text="El Prim"
                TextColor="White"
                FontSize="35"
                VerticalTextAlignment="Center"
                VerticalOptions="Center"
                FontFamily="Caveat"
                />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
